<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/titulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B71C1C"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/simuladores"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Título -->
        <TextView
            android:id="@+id/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:text="@string/credito_texto"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Campo: Valor de la propiedad -->
        <TextView
            android:id="@+id/subtitulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingBottom="12dp"
            android:text="@string/valor_de_la_propiedad"
            android:textColor="#B71C1C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/entrada1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:hint="100.000.000"
            android:inputType="number"
            android:padding="10dp" />

        <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="@string/texto_1"
            android:textColor="#666666"
            android:textSize="12sp" />

        <!-- Campo: ¿Cuánto necesitas? -->
        <TextView
            android:id="@+id/subtitulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:text="@string/subtitulo_2"
            android:textColor="#B71C1C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/entrada2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:hint="70.000.000"
            android:inputType="number"
            android:padding="10dp" />

        <TextView
            android:id="@+id/texto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="El préstamo mínimo es de $50.000.000 y no puede exceder el 70% del valor de la propiedad para créditos hipotecarios, miesntras que para leasing habitacional no puede exceder el 80% de la propiedad."
            android:textColor="#666666"
            android:textSize="12sp" />

        <!-- Campo: ¿A qué plazo necesitas el crédito? -->
        <TextView
            android:id="@+id/subtitulo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:text="* ¿A qué plazo necesitas el crédito (años)?"
            android:textColor="#B71C1C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/entrada3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:hint="5"
            android:inputType="number"
            android:padding="10dp" />

        <TextView
            android:id="@+id/texto3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Van desde los 5 hasta los 20 años. El plazo más común es de 20 años."
            android:textColor="#666666"
            android:textSize="12sp" />

        <!-- Campo: Tasa de interés -->
        <TextView
            android:id="@+id/subtitilo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="* ¿A qué tasa de interés efectiva anual (TAE)?"
            android:textColor="#B71C1C"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/entrada4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:hint="14.03"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <TextView
            android:id="@+id/texto4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="@string/texto_4"
            android:textColor="#666666"
            android:textSize="12sp" />

        <!-- Botón Simular -->
        A<Button
            android:id="@+id/boton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#B71C1C"
            android:padding="12dp"
            android:text="@string/simular"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>
</ScrollView>